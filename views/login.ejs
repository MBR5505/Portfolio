<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/design.css" />
    <script>
        function changeButtonText() {
            const loginButton = document.getElementById("loginBtn");
            loginButton.innerHTML = "Logging in...";
        }
    </script>
</head>
<body>

  <a href="/" class="go-back-button">
    <span class="icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
        <path d="M10 19l-7-7 7-7v4h8c2.8 0 5 2.2 5 5s-2.2 5-5 5h-3v-2h3c1.7 0 3-1.3 3-3s-1.3-3-3-3h-8v4z"/>
      </svg>
    </span>
    <span class="text">Tilbake</span>
  </a> 

  <div class="container">
      <h1>Login</h1>
      <br>
      <form action="" method="post" onsubmit="changeButtonText()" class="form">
        <div class="input-group">
          <input type="text" name="brukernavn" id="loginUser" class="input" placeholder="Brukernavn">
          <input type="password" name="passord" id="loginPass" class="input" placeholder="Passord">
          <%let errorMessage = '' %>
        </div>
        <% if (errorMessage){%>
          <div class="error-message"><%= errorMessage %></div>
        <%}%>
          <div class="checkbox-container">
            <input type="checkbox" id="remember" name="remember" class="checkbox">
          <label for="remember" class="label">Remember me</label>
        </div>
        <a href="/signup" class="link">Don't have an account? Register</a>
            <button type="submit" id="loginBtn" class="button">Login</button>
        </form>
    </div>
</body>
</html>
